<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mj.helloandroid.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageView_height"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/imageView_marginBottom"
            android:layout_marginTop="@dimen/imageView_marginTop"
            android:contentDescription="@string/udacity"
            android:src="@drawable/udacity_image2"/>

        <TextView
            android:contentDescription="@string/text"
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_height"
            android:text="@string/text"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="@dimen/textView_marginTop"
            android:layout_marginBottom="@dimen/textView_marginBottom"
            android:layout_marginLeft="@dimen/textView_marginLeft"
            android:layout_marginStart="@dimen/textView_marginLeft"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/textView_size"/>

       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_height"
            android:layout_below="@+id/TextView"
            android:paddingTop="@dimen/paddingTop"
            android:paddingBottom="@dimen/paddingBottom"
            android:background="@color/blue"
            android:orientation="vertical">

           <TextView
               android:id="@+id/TextView2"
               android:layout_width="400dp"
               android:layout_height="@dimen/textViewX_height"
               android:layout_marginLeft="@dimen/textViewX_marginleft"
               android:layout_marginStart="@dimen/textViewX_marginStart"
               android:contentDescription="@string/information"
               android:drawableLeft="@drawable/ic_location_on_white_18dp"
               android:drawableStart="@drawable/ic_location_on_white_18dp"
               android:drawablePadding="@dimen/textViewX_padding"
               android:text="@string/information"
               android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
               android:textColor="@color/bluegray"
               android:textSize="@dimen/textViewX_size"
               android:padding="@dimen/padding2" />


           <TextView
               android:id="@+id/TextView3"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/textViewX_height"
               android:layout_alignLeft="@+id/TextView2"
               android:layout_alignStart="@+id/TextView2"
               android:layout_below="@+id/TextView2"
               android:contentDescription="@string/phone"
               android:drawableLeft="@drawable/ic_call_white_18dp"
               android:drawablePadding="@dimen/textViewX_padding"
               android:drawableStart="@drawable/ic_call_white_18dp"
               android:paddingTop="@dimen/padding"
               android:text="@string/phone"
               android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
               android:textColor="@color/bluegray"
               android:textSize="@dimen/textViewX_size" />


           <TextView
               android:id="@+id/TextView4"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/textViewX_height"
               android:layout_marginLeft="@dimen/textViewX_marginleft"
               android:layout_marginStart="@dimen/textViewX_marginStart"
               android:layout_below="@+id/TextView3"
               android:contentDescription="@string/web"
               android:drawableLeft="@drawable/ic_http_white_18dp"
               android:drawableStart="@drawable/ic_http_white_18dp"
               android:drawablePadding="@dimen/textViewX_padding"
               android:text="@string/web"
               android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
               android:textColor="@color/bluegray"
               android:textSize="@dimen/textViewX_size"
               android:paddingTop="@dimen/padding"/>

       </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
